<UserControl x:Class="Microsoft.Kinect.Samples.KinectPaint.HowToUsePopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Microsoft.Kinect.Samples.KinectPaint"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="/KinectPaint;component/Resources/Education.PNG" />
        <local:KinectPaintButton Width="1000" Height="100" Grid.Row="1" Content="사용방법을 확인하셨으면 눌러주십시오!!" FontSize="40" Background="SkyBlue" Style="{StaticResource MetroButtonStyle}" Click="Confirm_Click">
            
        </local:KinectPaintButton>
    </Grid>
</UserControl>
